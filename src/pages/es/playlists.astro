---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE } from "../../consts";

// Import Cookie Consent Component
import CookieConsent from "../../components/CookieConsent.astro";

// MULTILINGUAL SETTINGS
const currentLang = "es";
const alternateHref = "/playlists"; // Links back to English

// PLAYLIST IDs (Same as English)
const PLAYLIST_IDS = [
    "0J4qeq2hJbGkhBqM7Wpl8P",
    "1WCwPvPwrhr3qL1j0Ifspw",
    "2l9gpXmsLtF29bj6JIhhii",
    "4JLSbszHq3pm7h2v7MVe9U",
    "78fPWbnVlo0o1IFal8Pul2",
    "02srcTRlfp7w4oojH33XbZ",
    "6NweKUuX2PaZF3ivoDrNwz",
    "6gp0IOSYv8aI3LHmeYvZJO",
    "0TUB9IKkLDhnLZLXEVPplN",
    "6cqbMT2aiE6OyxsFRftgqx",
];
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead
            title="Listas de Spotify | Alexis Gomel"
            description="Mis listas de Spotify"
            currentLang={currentLang}
            alternateHref={alternateHref}
        />

        <CookieConsent currentLang={currentLang} />

        <link
            rel="stylesheet"
            href="/assets/vendors/themify-icons/css/themify-icons.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        />
        <link rel="stylesheet" href="/assets/css/steller.css" />
    </head>

    <body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
        <Header />

        <div class="container mt-5 pt-5 mb-5">
            <div class="text-center mb-5">
                <h1 class="section-title">Listas de Reproducción de Spotify</h1>
                <p>Estas son mis listas. ¡Que las disfrutes! ;)</p>
            </div>

            <div class="row">
                {
                    PLAYLIST_IDS.map((id) => (
                        <div class="col-md-6 mb-4">
                            <iframe
                                style="border-radius:12px"
                                src={`https://open.spotify.com/embed/playlist/${id}?utm_source=generator`}
                                width="100%"
                                height="352"
                                frameborder="0"
                                allowfullscreen=""
                                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                                loading="lazy"
                            ></iframe>
                        </div>
                    ))
                }
            </div>
        </div>

        <Footer />

        <script is:inline src="/assets/vendors/jquery/jquery-3.4.1.js"></script>
        <script is:inline src="/assets/vendors/bootstrap/bootstrap.bundle.js"
        ></script>
        <script is:inline src="/assets/vendors/bootstrap/bootstrap.affix.js"
        ></script>
        <script is:inline src="/assets/js/steller.js"></script>
    </body>
</html>
