                            <div class="overlay">
                                <div class="overlay-infos">
                                    <h5>Custom colormaps</h5>
                                    <a href="/assets/imgs/PopulationByDistrict_NiceColormap.png"><i class="ti-zoom-in"></i></a>
                                    <a href="https://github.com/alxgom/-stitched_colorbars"><i class="ti-link"></i></a>
                                </div>  
                            </div>
                        </div>
                        <div class="img-wrapper">
                            <img src="/assets/imgs/filament_scheme2.png" alt="">
                            <div class="overlay">
                                <div class="overlay-infos">
                                    <h5>Filamentation statistical regimes</h5>
                                    <a href="javascript:void(0)"><i class="ti-zoom-in"></i></a>
                                    <a href="https://opg.optica.org/oe/fulltext.cfm?uri=oe-31-6-9973&id=527180"><i class="ti-link"></i></a>
                                </div>                           
                            </div>
                        </div>                  
                    </div>
                </div>
            </div>
        </section>
        <section id="contact" class="position-relative section">
            <div class="container text-center">
                <h6 class="subtitle">Contact</h6>
                <h5 class="section-title mb-4"><a  href="mailto:alexis.gomel@gmail.com" target="_blank"> Send me an email: alexis.gomel@gmail.com </a></h5>
                <h6 class="subtitle"></h6>
                
                <textarea name="message"></textarea>
                <input type="submit">

                 <div id="map">
                    <iframe src="https://snazzymaps.com/embed/458460"></iframe>
