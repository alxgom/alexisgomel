---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import {
    SITE_TITLE,
    SITE_DESCRIPTION,
    EMAIL,
    INSTAGRAM_LINK,
    LINKEDIN_LINK,
    GITHUB_LINK,
    RESEARCHGATE_LINK,
} from "../consts";

// TRACKING ID
const GTM_ID = "GTM-WDZK7ZFX";

// MULTILINGUAL SETTINGS
const currentLang = "en";
const alternateHref = "/es/"; // Links to Spanish version
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={"Alexis Gomel | Physicist & Data Scientist Portfolio"}
            description={SITE_DESCRIPTION}
            currentLang={currentLang}
            alternateHref={alternateHref}
        />
        <link
            rel="preload"
            as="image"
            href="/assets/css/wavesss.png"
            fetchpriority="high"
        />

        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("consent", "default", {
                ad_storage: "denied",
                ad_user_data: "denied",
                ad_personalization: "denied",
                analytics_storage: "denied",
            });
        </script>

        <link
            rel="stylesheet"
            id="silktide-consent-manager-css"
            href="/cookie-banner/silktide-consent-manager.css"
        />
        <script is:inline src="/cookie-banner/silktide-consent-manager.js"
        ></script>

        <script is:inline>
            document.addEventListener("DOMContentLoaded", function () {
                if (typeof silktideCookieBannerManager !== "undefined") {
                    silktideCookieBannerManager.updateCookieBannerConfig({
                        background: { showBackground: true },
                        cookieIcon: { position: "bottomLeft" },
                        cookieTypes: [
                            {
                                id: "necessary",
                                name: "Necessary",
                                required: true,
                            },
                            {
                                id: "analytics",
                                name: "Analytics",
                                defaultValue: true,
                                onAccept: function () {
                                    gtag("consent", "update", {
                                        analytics_storage: "granted",
                                    });
                                    dataLayer.push({
                                        event: "consent_accepted_analytics",
                                    });
                                },
                                onReject: function () {
                                    gtag("consent", "update", {
                                        analytics_storage: "denied",
                                    });
                                },
                            },
                            {
                                id: "advertising",
                                name: "Advertising",
                                onAccept: function () {
                                    gtag("consent", "update", {
                                        ad_storage: "granted",
                                        ad_user_data: "granted",
                                        ad_personalization: "granted",
                                    });
                                    dataLayer.push({
                                        event: "consent_accepted_advertising",
                                    });
                                },
                                onReject: function () {
                                    gtag("consent", "update", {
                                        ad_storage: "denied",
                                        ad_user_data: "denied",
                                        ad_personalization: "denied",
                                    });
                                },
                            },
                        ],
                    });
                }
            });
        </script>

        <script is:inline define:vars={{ GTM_ID }}>
            (function (w, d, s, l, i) {
                w[l] = w[l] || [];
                w[l].push({
                    "gtm.start": new Date().getTime(),
                    event: "gtm.js",
                });
                var f = d.getElementsByTagName(s)[0],
                    j = d.createElement(s),
                    dl = l != "dataLayer" ? "&l=" + l : "";
                j.async = true;
                j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
                f.parentNode.insertBefore(j, f);
            })(window, document, "script", "dataLayer", GTM_ID);
        </script>

        <link
            rel="stylesheet"
            href="/assets/vendors/themify-icons/css/themify-icons.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/gh/jpswalsh/academicons@1/css/academicons.min.css"
        />
        <link rel="stylesheet" href="/assets/css/steller.css" />
    </head>

    <body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
        <noscript>
            <iframe
                src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
                height="0"
                width="0"
                title="Google Tag Manager"
                style="display:none;visibility:hidden"></iframe>
        </noscript>

        <Header />

        <header class="header" id="home">
            <div class="bg-image bg-image-white">
                <div class="bg-image-white">
                    <div class="container">
                        <div class="infos">
                            <p class="subtitle h6">Hello, I'm</p>
                            <h1 class="title h6">Alexis Gomel</h1>
                            <p>Physicist | Data scientist</p>
                            <div class="buttons pt-">
                                <a
                                    href="mailto:alexis.gomel@gmail.com"
                                    target="_blank"
                                >
                                    <button
                                        class="btn btn-primary rounded"
                                        aria-label="Send email"
                                    >
                                        <i class="ti-email"></i></button
                                    >
                                </a>
                                <a
                                    href="/assets/files/CV_Alexis_Gomel_web.pdf"
                                    download
                                >
                                    <button
                                        class="btn btn-dark rounded"
                                        aria-label="Download CV"
                                        >DOWNLOAD CV</button
                                    >
                                </a>
                            </div>

                            <div class="socials mt-4">
                                <a
                                    class="social-item"
                                    href="INSTAGRAM_LINK"
                                    target="_blank"
                                    aria-label="Instagram"
                                    ><i class="fa-brands fa-instagram fa-1x"
                                    ></i></a
                                >
                                <a
                                    class="social-item"
                                    href="LINKEDIN_LINK"
                                    target="_blank"
                                    aria-label="LinkedIn"
                                    ><i class="fa-brands fa-linkedin"></i></a
                                >
                                <a
                                    class="social-item"
                                    href="https://github.com/alxgom"
                                    target="_blank"
                                    aria-label="GitHub"
                                    ><i class="fa-brands fa-github"></i></a
                                >
                                <a
                                    class="social-item"
                                    href="https://www.researchgate.net/profile/Alexis-Gomel"
                                    target="_blank"
                                    aria-label="ResearchGate"
                                    ><i class="ai ai-researchgate"></i></a
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <section id="about" class="section mt-3">
            <div class="container mt-5">
                <div class="row text-center text-md-left">
                    <div class="col-md-3">
                        <img
                            src="/assets/imgs/avatar_liviano.png"
                            alt=""
                            class="img-thumbnail mb-4"
                        />
                    </div>
                    <div class="pl-md-4 col-md-9">
                        <h6 class="title">Alexis Gomel</h6>
                        <p class="subtitle">Physicist/Researcher</p>
                        <p>
                            Welcome to my personal website! I am a physicist
                            with a passion for nonlinear dynamics, complex
                            systems, early warnings, statistical mechanics and
                            its applications to many systems. My research
                            interests also extend to education and the fields of
                            generative AI and data science.
                        </p>
                        <p>
                            When I'm not delving into scientific pursuits, I
                            love to capture life through photography, move to
                            the rhythm of swing dances, beat the drums, and hit
                            the road for spontaneous hitchhiking adventures.
                        </p>
                        <a
                            href="/assets/files/CV_Alexis_Gomel_web.pdf"
                            download
                        >
                            <button
                                class="btn btn-primary rounded mt-3"
                                aria-label="Download CV">DOWNLOAD CV</button
                            >
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section id="service" class="section">
            <div class="container text-center">
                <h6 class="section-title mb-4">What I Do</h6>
                <p class="mb-5 pb-4"></p>
                <div class="row">
                    <div class="col-sm-6 col-md-3 mb-4">
                        <div class="custom-card card border">
                            <div class="card-body">
                                <a href="/cvonline" aria-label="View Online CV">
                                    <i class="icon ti-user"></i></a
                                >
                                <h5><a href="/cvonline"> Online cv </a></h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 mb-4">
                        <div class="custom-card card border">
                            <div class="card-body">
                                <a
                                    href="/projects"
                                    aria-label="View Personal Projects"
                                >
                                    <i class="icon ti-gallery"> </i></a
                                >
                                <h5>
                                    <a href="/projects">
                                        Personal projects & other</a
                                    >
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 mb-4">
                        <div class="custom-card card border">
                            <div class="card-body">
                                <a
                                    href="https://scholar.google.com/citations?user=XgG56aYAAAAJ&hl=es&oi=ao"
                                    target="_blank"
                                    aria-label="View Publications on Google Scholar"
                                >
                                    <i class="ai ai-google-scholar ai-3x"
                                    ></i></a
                                >
                                <h5>
                                    <a
                                        href="https://scholar.google.com/citations?user=XgG56aYAAAAJ&hl=es&oi=ao"
                                        target="_blank"
                                    >
                                        <h5>Publications (G-scholar)</h5></a
                                    >
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 mb-4">
                        <div class="custom-card card border">
                            <div class="card-body">
                                <a
                                    href="/playlists"
                                    aria-label="View Playlists"
                                >
                                    <i class="icon ti-music-alt"></i></a
                                >
                                <h5>
                                    <a href="/playlists"> Playlists </a>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="portfolio" class="section">
            <div class="container text-center">
                <h6 class="section-title mb-4">Check My Works</h6>
                <p class="mb-5 pb-4">Here is a list of some of my projects.</p>

                <div class="row">
                    <div class="col-sm-4">
                        <div class="img-wrapper">
                            <img src="/assets/imgs/3d_hamiltonian.png" alt="" />
                            <div class="overlay">
                                <div class="overlay-infos">
                                    <h5>Rogue wave freezing</h5>
                                    <a
                                        href="/assets/imgs/3d_hamiltonian.png"
                                        aria-label="Zoom in on Rogue wave freezing"
                                        ><i class="ti-zoom-in"></i></a
                                    >
                                    <a
                                        href="https://journals.aps.org/prl/abstract/10.1103/PhysRevLett.126.174501"
                                        aria-label="View Rogue wave freezing project"
                                        ><i class="ti-link"></i></a
                                    >
                                </div>
                            </div>
                        </div>
                        <div class="img-wrapper">
                            <img
                                src="/assets/imgs/wave_scheme_flows.png"
                                alt=""
                            />
                            <div class="overlay">
                                <div class="overlay-infos">
                                    <h5>ADHONLS</h5>
                                    <a
                                        href="/assets/imgs/wave_scheme_flows.png"
                                        aria-label="Zoom in on ADHONLS"
                                        ><i class="ti-zoom-in"></i></a
                                    >
                                    <a
                                        href="https://pubs.aip.org/aip/pof/article/35/8/087128/2907461/Mean-flow-modeling-in-high-order-nonlinear"
                                        aria-label="View ADHONLS project"
                                        ><i class="ti-link"></i></a
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="img-wrapper">
                            <img src="/assets/imgs/wordcloud.png" alt="" />
                            <div class="overlay">
                                <div class="overlay-infos">
                                    <h5>Wordcloud Journal webscrapping</h5>
                                    <a
                                        href="/assets/imgs/wordcloud.png"
                                        aria-label="Zoom in on Wordcloud Journal webscrapping"
                                        ><i class="ti-zoom-in"></i></a
                                    >
                                    <a
                                        href="https://github.com/alxgom/NL-Dynamics-wordcloud"
                                        aria-label="View Wordcloud Journal webscrapping project"
                                        ><i class="ti-link"></i></a
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="img-wrapper">
                    <img
                        src="/assets/imgs/PopulationByDistrict_NiceColormap_mini.png"
                        alt=""
                    />
                    <div class="overlay">
                        <div class="overlay-infos">
                            <h5>Custom colormaps</h5>
                            <a
                                href="/assets/imgs/PopulationByDistrict_NiceColormap.png"
                                aria-label="Zoom in on Custom colormaps"
                                ><i class="ti-zoom-in"></i></a
                            >
                            <a
                                href="https://github.com/alxgom/-stitched_colorbars"
                                aria-label="View Custom colormaps project"
                                ><i class="ti-link"></i></a
                            >
                        </div>
                    </div>
                </div>
                <div class="img-wrapper">
                    <img src="/assets/imgs/filament_scheme2.png" alt="" />
                    <div class="overlay">
                        <div class="overlay-infos">
                            <h5>Filamentation statistical regimes</h5>
                            <span><i class="ti-zoom-in"></i></span>
                            <a
                                href="https://opg.optica.org/oe/fulltext.cfm?uri=oe-31-6-9973&id=527180"
                                aria-label="View Filamentation statistical regimes project"
                                ><i class="ti-link"></i></a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="contact" class="position-relative section">
            <div class="container text-center">
                <h6 class="subtitle">Contact</h6>
                <h5 class="section-title mb-4">
                    <a href="mailto:alexis.gomel@gmail.com" target="_blank">
                        Send me an email: alexis.gomel@gmail.com
                    </a>
                </h5>
                <h6 class="subtitle"></h6>

                <textarea name="message" aria-label="Message"></textarea>
                <input type="submit" value="Send Message" />

                <div id="map">
                    <iframe
                        src="https://snazzymaps.com/embed/458460"
                        title="Google Maps Location"></iframe>
                </div>
            </div>
        </section>

        <Footer />

        <script is:inline src="/assets/vendors/jquery/jquery-3.4.1.js"></script>
        <script is:inline src="/assets/vendors/bootstrap/bootstrap.bundle.js"
        ></script>
        <script is:inline src="/assets/vendors/bootstrap/bootstrap.affix.js"
        ></script>
        <script is:inline src="/assets/js/steller.js"></script>
    </body>
</html>
