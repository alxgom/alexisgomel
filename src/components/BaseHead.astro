import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
	title: string;
	description: string;
    // The current language tag (e.g., 'en' for /projects or 'es' for /es/projects)
    currentLang: string; 
    // The canonical URL path of the alternate language page (e.g., '/es/projects' or '/projects')
    alternateHref: string; 
}

const { title, description, currentLang, alternateHref } = Astro.props;

// Determine the canonical URL for the current page
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Determine the alternate language tag
const alternateLang = currentLang === 'en' ? 'es' : 'en';

// Set the base URL for the 'x-default' (fallback) link to the English version
const enUrl = currentLang === 'en' ? canonicalURL.href : alternateHref;
---
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>
<meta name="description" content={description} />

<link rel="canonical" href={canonicalURL} />

<link rel="alternate" hreflang={currentLang} href={canonicalURL.href} />

<link rel="alternate" hreflang={alternateLang} href={alternateHref} />

<link rel="alternate" hreflang="x-default" href={enUrl} />

