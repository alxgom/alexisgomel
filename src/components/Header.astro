const { pathname } = Astro.url; // Get the current path (e.g., /projects)
const isSpanish = pathname.startsWith('/es/'); // Check if we are currently in /es/

// Determine the URL for the opposite language
// This logic handles both the root (/) and subpages (/projects)
const esUrl = isSpanish ? pathname.replace('/es/', '/') : `/es${pathname}`;

// Determine the label to display in the switcher
const label = isSpanish ? 'EN' : 'ES';

// Set the flag for the current language
const lang = isSpanish ? 'es' : 'en';

